<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <ToolsPath>$(MSBuildThisFileDirectory)</ToolsPath>

        <!-- Define default configuration (so building from command line is consistent) -->
        <Configuration Condition=" '$(Configuration)' == '' ">Release</Configuration>

        <!-- Default code analysis rule set should be "none" -->
        <CodeAnalysisRuleSet>..\..\src\xunit.empty.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>
</Project>
